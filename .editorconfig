# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 3
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Config for package.json or *.yml
[{package.json,*.yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Config for Sass files
[*.s*css]
indent_style = tab
indent_size = 3


# Config for Markdown files
[*.md]
trim_trailing_whitespace = false
